<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.act.RegisterAct">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_mobile"
            style="@style/SingleLineEditStyle"
            android:layout_marginTop="45dp"
            android:hint="请输入手机号码（必填）"
            android:inputType="phone" />


        <EditText
            android:id="@+id/edit_psw"
            style="@style/SingleLineEditStyle"
            android:layout_marginTop="20dp"
            android:hint="请输入密码（必填）"
            android:inputType="textPassword"
            android:paddingRight="60dp" />


        <EditText
            android:id="@+id/edit_psw2"
            style="@style/SingleLineEditStyle"
            android:layout_marginTop="20dp"
            android:hint="请再次输入密码（必填）"
            android:inputType="textPassword"
            android:paddingRight="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_code"
                style="@style/SingleLineEditStyle"
                android:layout_width="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:hint="请输入验证码（必填）"
                android:inputType="phone"
                android:paddingRight="0dp" />

            <Button
                android:id="@+id/btn_get_code"
                style="@style/SingleLineBtnStyle"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn"
                android:text="获取验证码"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/cb_checked"
                android:checked="true"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="注册协议"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/SingleLineBtnStyle"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn"
            android:text="提交"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
