<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.act.Main2Act">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/divider_gray_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="21dp"
                        android:layout_height="21dp" />


                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="聊天"
                        android:textSize="12sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_unread_num_one"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignRight="@id/ll_one"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_unread"
                    android:gravity="center"
                    android:minWidth="18dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="21dp"
                        android:layout_height="21dp" />

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="通讯录"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_unread_num_two"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignRight="@id/ll_two"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_unread"
                    android:gravity="center"
                    android:minWidth="18dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="21dp"
                        android:layout_height="21dp" />

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="发现"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_unread_num_three"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignRight="@id/ll_three"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_unread"
                    android:gravity="center"
                    android:minWidth="18dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="21dp"
                        android:layout_height="21dp" />

                    <TextView
                        android:id="@+id/tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="我"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_unread_num_four"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignRight="@id/ll_four"
                    android:layout_marginRight="-8dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_unread"
                    android:gravity="center"
                    android:minWidth="18dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
