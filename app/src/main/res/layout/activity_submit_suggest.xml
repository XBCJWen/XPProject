<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.act.SubmitSuggestAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/divider_gray_margin" />

        <com.jm.core.common.widget.edittext.ContainsEmojiEditText
            android:id="@+id/editMessage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/transparent"
            android:gravity="top"
            android:hint="欢迎反馈任何意见和问题，你的反馈也是我们产品进步的动力哦！"
            android:maxLength="1000"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="您还可以输入1000个字"
            android:textColor="@color/color999999"
            android:textSize="12sp" />

        <View
            style="@style/divider_gray_margin"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/divider_gray_margin" />

        <com.jm.core.common.widget.edittext.ContainsEmojiEditText
            android:id="@+id/edit_contact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入你的联系方式（QQ/微信号/微博/手机号）"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/color666666"
            android:textSize="14sp" />

        <View style="@style/divider_gray_margin" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
